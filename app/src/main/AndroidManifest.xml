<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.yunfei.fragmentlazyloaddemo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewPageActivity"
            android:label="ViewPage"
            />
        <activity
            android:name=".StaticFragmentActivity"
            android:label="StaticFragment"
            />
        <activity
            android:name=".DynamicFragmentActivity"
            android:label="DynamicFragment"
            />
        <activity
            android:name=".TabLayoutActivity"
            android:label="TabLayoutActivity"
            />
        <activity
            android:name=".lazy.LazyViewPageActivity"
            android:label="LazyViewPageActivity"
            />
    </application>

</manifest>